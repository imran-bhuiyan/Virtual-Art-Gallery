<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.test_project.ArtistPasswordChangeController">

    <!-- Main Container -->
    <VBox alignment="CENTER" spacing="20.0" prefWidth="400.0" prefHeight="350.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <!-- Title -->
        <Label text="Change Password" style="-fx-font-size: 22px; -fx-text-fill: #2C3E50;" />

        <!-- Current Password -->
        <VBox spacing="5.0">
            <Label text="Current Password" style="-fx-font-size: 14px;" />
            <PasswordField fx:id="currentPasswordField" promptText="Enter Current Password" />
        </VBox>

        <!-- New Password -->
        <VBox spacing="5.0">
            <Label text="New Password" style="-fx-font-size: 14px;" />
            <PasswordField fx:id="newPasswordField" promptText="Enter New Password" />
        </VBox>

        <!-- Confirm Password -->
        <VBox spacing="5.0">
            <Label text="Confirm Password" style="-fx-font-size: 14px;" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" />
        </VBox>

        <!-- Submit Button -->
        <Button text="Change Password" fx:id="submitButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px;" onAction="#handleChangePassword"/>
    </VBox>

</AnchorPane>
